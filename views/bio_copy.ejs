<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/1bc36632b3.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/navbar__global.css">
    <link rel="stylesheet" href="../css/bio.css">
    
    
    <title>WildPrism</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="../images/static/logo.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
            </a>
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search Wildhacks" aria-label="Search">
                <i class="fas fa-search"></i>
            </form>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/dashboard"><i class="fas fa-home"></i></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-user-tie"></i></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><i class="fas fa-bars"></i></a>
              </li>
            </ul>

          </div>
        </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Subscribe to notify you of your posts!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/subscribe" method="post">
                <div class="modal-body">
                    <input type="text" name="phone" id="phone" class="form-control" placeholder="Enter your phone number">
                    <input type="hidden" name="id" value="<%= data.id %>">
                </div>
                <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Subscribe</button>
                </div>
            </form>
        </div>
        </div>
    </div>
  

    <!-- BODY --> 
    <div class="wrapper">
        <div class="top">
            <div class="cover">
                <img src="../uploads/photos/<%= data.cover %>" alt="" class="cover-photo">
            </div>
            <div class="user">
                <div class="user_text">
                    <div class="display-picture">
                        <img src="../uploads/photos/<%= data.dp %>" alt="">
                    </div>
                    <div class="name">
                        <h1><%= data.name %></h1>
                        <h4><%= data.subClass %></h4>
                    </div>
                </div>
                <div class="subscribe">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Subscribe</button>
                    <a type="button" class="btn btn-danger">Adopt</a>
                </div>
            </div>
        </div>
        <div class="about">
            <div class="about_text">
                <div class="about_top">
                    <div class="about-animal">
                        <h6>About</h6>
                        <p class="about_top__p"> <%= data.about %> </p>
                    </div>
                    <div class="endangered-category">
                        <h6>Endangered category</h6>
                        <p class="about_top__p"> <%= data.endCat %>></p>
                    </div>
                    <div class="number-left">
                        <p class="about_top__p num"> <%= data.num %> </p>
                    </div>
                </div>
                <div class="about_middle vulnerability-story">
                    <h3 class="v-story_heading"> V-story </h3>
                    <div class="story">
                        <p class="short"> <%= data.vstoryShort %> <a href="" id="read_more">read more</a> </p>
                        <p id="long" class="hide"> <%= data.vstoryLong %> <a href="" id="read_less" class="hide">read less</a></p>
                    </div>
                    <div class="v-story_img">
                        <img src="../uploads/photos/<%= data.vimg %>" alt="">
                    </div>
                </div>
                <div class="about_bottom">
                    <div class="gallery">
                        <h2 class="gallery_heading" > Gallery </h2>
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            
                            <div class="carousel-inner">
                                <% data.Gallery.forEach((element , index) => { %>
                                    <% if(index == 0) {%>
                                    <div class="carousel-item active">
                                    <% } else {%>
                                        <div class="carousel-item">
                                    <% } %>
                                        <img src="../uploads/photos/<%= element %>" class="w-100" alt="...">
                                    </div>
                                <% }) %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="links">
                        <h4 class="link_heading"> KNOW MORE  </h4>
                        <% data.links.forEach(element => { %>
                            <div class="link">
                                <i class="link-icon fas fa-globe"></i> <a href="<%= element %>"> <%= element %> </a>
                            </div>
                        <% }) %>
                    </div>

                    <div class="visit">
                        <h2 class="visit_heading"> Want To Visit a <%= data.name %> ? </h2>
                        <div class="maps">
                            <% data.maps.forEach(element => { %>
                                <div class="map">
                                    <%- element %>
                                    <!-- <h5> BandhavGarh Sanctuary </h5> -->
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
<script>
    const read_more = document.getElementById("read_more");
    const read_less = document.getElementById("read_less");
    const long = document.getElementById("long");

    read_more.addEventListener("click" , (e)=>{
        e.preventDefault();

        read_more.classList.toggle("hide");
        read_less.classList.toggle("hide");
        long.classList.toggle("hide");
    });
    
    read_less.addEventListener("click" , (e)=>{
        e.preventDefault();
        
        read_more.classList.toggle("hide");
        read_less.classList.toggle("hide");
        long.classList.toggle("hide");
    });
</script>
</html>